# Production Environment Variables Template
# Copy this to .env.production and update with your actual values
# NEVER commit .env.production with real credentials to git!

###############################################################################
# SERVER CONFIGURATION
###############################################################################
PORT=8080
ENVIRONMENT=production
LOG_LEVEL=info
NODE_ENV=production

###############################################################################
# DATABASE
###############################################################################
MONGODB_URI=mongodb://mongodb:27017
DATABASE_NAME=motherboard

# MongoDB Authentication (Recommended for production)
# MONGO_ROOT_USER=admin
# MONGO_ROOT_PASSWORD=<your-secure-password>

###############################################################################
# AUTHENTICATION & SECURITY
###############################################################################
# Generate secure random strings for these:
# openssl rand -base64 32
JWT_SECRET=<generate-secure-random-string>
JWT_EXPIRY=7d
SESSION_TOKEN_EXPIRY=604800

# NextAuth (for frontend)
NEXTAUTH_SECRET=<generate-secure-random-string>
NEXTAUTH_URL=https://yourdomain.com

###############################################################################
# CORS & DOMAIN
###############################################################################
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

###############################################################################
# SERVICE URLS (Internal Docker Network)
###############################################################################
EMAIL_PLUGIN_URL=http://email:8081
SMS_PLUGIN_URL=http://sms:8082
WHATSAPP_PLUGIN_URL=http://whatsapp:8083
TELEGRAM_PLUGIN_URL=http://telegram:8084
BILLING_SERVICE_URL=http://billing:8090
HEALTH_SERVICE_URL=http://health:8091
MARKETING_SERVICE_URL=http://marketing:8092
CLOUD_ADAPTER_URL=http://cloud-adapter:8093
NOTIFICATION_SERVICE_URL=http://notification:8094

###############################################################################
# PLUGIN CREDENTIALS
###############################################################################

# Email Plugin (Resend)
RESEND_API_KEY=<your-resend-api-key>
FROM_EMAIL=noreply@yourdomain.com

# SMS Plugin (Twilio)
TWILIO_ACCOUNT_SID=<your-twilio-account-sid>
TWILIO_AUTH_TOKEN=<your-twilio-auth-token>
TWILIO_PHONE_NUMBER=<your-twilio-phone>

# WhatsApp Plugin (Twilio/WATI)
WHATSAPP_API_KEY=<your-whatsapp-api-key>
WHATSAPP_PHONE_NUMBER=<your-whatsapp-number>

# Telegram Plugin
TELEGRAM_BOT_TOKEN=<your-telegram-bot-token>

###############################################################################
# BILLING / PAYMENT GATEWAYS
###############################################################################

# Stripe
STRIPE_SECRET_KEY=<your-stripe-secret-key>
STRIPE_PUBLISHABLE_KEY=<your-stripe-publishable-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# Razorpay
RAZORPAY_KEY_ID=<your-razorpay-key-id>
RAZORPAY_KEY_SECRET=<your-razorpay-key-secret>
RAZORPAY_WEBHOOK_SECRET=<your-razorpay-webhook-secret>

###############################################################################
# CLOUD PROVIDER (Optional)
###############################################################################

# AWS
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_REGION=us-east-1
AWS_S3_BUCKET=<your-bucket-name>

# GCP
GOOGLE_CLOUD_PROJECT=<your-gcp-project-id>
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

###############################################################################
# SSL / TRAEFIK
###############################################################################
ACME_EMAIL=admin@yourdomain.com
TRAEFIK_AUTH=admin:$apr1$H6uskkkW$IgXLP6ewTrSuBkTrqE8wj/

###############################################################################
# MONITORING (Optional)
###############################################################################
# SENTRY_DSN=<your-sentry-dsn>
# DATADOG_API_KEY=<your-datadog-api-key>

###############################################################################
# BACKUP (Optional)
###############################################################################
# BACKUP_ENCRYPTION_KEY=<your-encryption-key>
# BACKUP_S3_BUCKET=<your-backup-bucket>

###############################################################################
# RATE LIMITING
###############################################################################
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

###############################################################################
# FEATURE FLAGS
###############################################################################
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
MAINTENANCE_MODE=false
