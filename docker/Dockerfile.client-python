# Shared Dockerfile for Python Clients
FROM python:3.9-slim

WORKDIR /app

# Install system dependencies if needed
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Expose port (default)
EXPOSE 8000

# Start command (Expects start.sh or main.py, but defaults to python main.py)
CMD ["python", "main.py"]
